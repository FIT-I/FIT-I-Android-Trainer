<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:text="김동현"
        android:textColor="@color/main"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_height="4dp"
        android:background="#F8F8F8"
        app:layout_constraintTop_toBottomOf="@id/tv_customerName"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_background"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_line"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_matching"
            app:layout_constraintBottom_toTopOf="@+id/iv_line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_service" />

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="서비스 종류"
            android:textColor="@color/main"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@+id/tv_service" />

        <TextView
            android:id="@+id/tv_matching_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="1시간"
            android:textColor="@color/main"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_line1" />

        <TextView
            android:id="@+id/tv_chat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="20,000원"
            android:textColor="@color/main"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_matching_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_matching_time" />

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@+id/tv_matching_time" />

        <TextView
            android:id="@+id/tv_chat_allprcie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="총 금액"
            android:textColor="@color/main"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_line2" />

        <TextView
            android:id="@+id/tv_chat_allprcie2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="20,000원"
            android:textColor="@color/main"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_allprcie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_chat_allprcie" />

        <ImageView
            android:id="@+id/iv_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/tv_chat_allprcie" />

        <TextView
            android:id="@+id/tv_chat_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="매칭 날짜"
            android:textColor="@color/main"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_line3" />

        <TextView
            android:id="@+id/tv_chat_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="23.1.17"
            android:textColor="@color/main"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_date"
            app:layout_constraintEnd_toStartOf="@+id/tv_chat_wave"
            app:layout_constraintTop_toTopOf="@id/tv_chat_date" />
        <TextView
            android:id="@+id/tv_chat_wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/tv_chat_end"
            app:layout_constraintTop_toTopOf="@id/tv_chat_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_date"
            android:text="@string/wave"
            android:textColor="@color/main"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_chat_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="23.1.25"
            android:textColor="@color/main"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_date"
            app:layout_constraintEnd_toStartOf="@+id/tv_chat_All"
            app:layout_constraintTop_toTopOf="@id/tv_chat_date" />

        <TextView
            android:id="@+id/tv_chat_All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총"
            android:textStyle="bold"
            android:textColor="@color/main"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_end"
            app:layout_constraintTop_toTopOf="@id/tv_chat_end"
            app:layout_constraintEnd_toStartOf="@id/tv_chat_Alldate"/>
        <TextView
            android:id="@+id/tv_chat_Alldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@color/main"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_chat_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_date"
            app:layout_constraintEnd_toStartOf="@id/tv_chat_day"/>
        <TextView
            android:id="@+id/tv_chat_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textStyle="bold"
            android:textColor="@color/main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_chat_date"
            app:layout_constraintTop_toTopOf="@id/tv_chat_date"/>



        <ImageView
            android:id="@+id/iv_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_chat_date" />

        <TextView
            android:id="@+id/tv_chat_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="픽업 형태"
            android:textColor="@color/main"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_line4" />

        <TextView
            android:id="@+id/tv_chat_pickup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="트레이너님이 와주세요"
            android:textColor="@color/main"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_pickup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_chat_pickup" />

        <ImageView
            android:id="@+id/iv_line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_chat_pickup" />

        <TextView
            android:id="@+id/tv_chat_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="매칭 장소"
            android:textColor="@color/main"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_line5" />

        <TextView
            android:id="@+id/tv_chat_place2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="서울특별시 상도로 50"
            android:textColor="@color/main"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_chat_place" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>